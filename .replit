modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Webpage Monitor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Webpage Monitor Test"

[[workflows.workflow]]
name = "Webpage Monitor"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python webpage_monitor.py --url https://example.com --interval 30"

[[workflows.workflow]]
name = "Webpage Monitor Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python webpage_monitor.py --url https://example.com --interval 10 --test"

[deployment]
run = ["sh", "-c", "python webpage_monitor.py --url https://example.com --interval 30"]
